{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/components/*": ["components/*"],
      "@/services/*": ["services/*"],
      "@/shared/*": ["shared/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "src/minimal-extension.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/actions",
    "src/hubs",
    "src/tabs",
    "src/widgets",
    "src/services",
    "src/shared",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
